<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/white_box"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/nav_header_padding_left"
    android:paddingRight="@dimen/nav_header_padding_right">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nav_header_margins">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/ep_profile_pic_size"
            android:layout_height="@dimen/ep_profile_pic_size"
            android:src="@drawable/user_icon_white_lined"
            app:civ_border_color="#cccccc"
            app:civ_border_width="0.3dp"
            android:id="@+id/nav_user_photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "
            android:textColor="#686767"
            android:fontFamily="sans-serif"
            android:layout_below="@id/nav_user_photo"
            android:layout_alignLeft="@id/nav_user_photo"
            android:layout_marginTop="@dimen/nav_header_margins"
            android:id="@+id/nav_username"
            android:textSize="@dimen/nav_header_username_textsize"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textStyle="bold"
            android:textColor="#444444"
            android:fontFamily="sans-serif"
            android:layout_below="@id/nav_username"
            android:layout_alignLeft="@id/nav_user_photo"
            android:textSize="@dimen/nav_header_fullname_textsize"
            android:id="@+id/nav_fullname"/>

    </RelativeLayout>


</RelativeLayout>